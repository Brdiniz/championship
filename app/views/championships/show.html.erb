<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
	    <li class="first"><%= link_to "Campeonatos", championships_path  %></li>
      <li class="active"><%= link_to @championship.name, "#" %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.championship.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @championship.name %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_championship_path(@championship), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", championship_path(@championship), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
      <div class="clear"></div>
      <p />
			<hr>
			<h1>Grupos</h1>
			<div class="clear"></div>
			<p />
			<table class="table" id="groups_table">
				<th class="first">Time</th>
				<th class="last"></th>
				<% @championship.groups.sort.each do |group| %>
					<tr class='<%= cycle("odd", "even") %>'>
						<td><%= group.name %></td>
						<td class="last">
	            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", [@championship, group] %> |
	            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_championship_group_path(@championship, group) %> |
	            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", [@championship, group], :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
						</td>
					</tr>
				<% end %>
			</table>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>