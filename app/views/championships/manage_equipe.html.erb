<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
	    <li class="first"><%= link_to "Campeonatos", championships_path  %></li>
      <li><%= link_to @championship.name, @championship %></li>
      <li class="active"><%= link_to "Associar uma equipe", "#" %></li>
    </ul>
  </div>          
  <div class="content">
		 <h2 class="title"></h2>
    <div class="inner">
      <% form_for :championship, :url => championship_associate_equipes_path(@championship), :html => { :class => :form } do |f| -%>
				  <div class="group">
				    <%= f.label :equipe_name, t("activerecord.attributes.championship.name", :default => "Name"), :class => :label %>
				    <%= f.text_field :equipe_name, :class => 'text_field' %>
				  </div>

				<div class="group navform wat-cf">
				  <button class="button" type="submit">
				    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
				  </button>  
				  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", @championship, :class => "button" %> 
				</div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>