<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
	    <li class="first"><%= link_to "Equipes", equipes_path  %></li>
  		<li><%= link_to @equipe.name, @equipe %></li>
  		<li><%= link_to "Jogadores", equipe_players_path(@equipe) %></li>
      <li class="active"><%= link_to @player.name, "#" %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">

        <p>
          <b><%= t("activerecord.attributes.player.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @player.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.player.number", :default => t("activerecord.labels.number", :default => "Number")) %>:</b>
          <%= @player.number %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_equipe_player_path(@equipe, @player), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", [@equipe, @player], :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>