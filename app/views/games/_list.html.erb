<table class="table">
  <tr>             
    <th class="first">ID</th>
		<th><%= t("activerecord.attributes.game.home_type", :default => "Home type") %></th>
		<th><%= t("activerecord.attributes.game.visitant_type", :default => "Visitant Type")  %></th>
    <th class="last">&nbsp;</th>
  </tr>
  <% games.each do |game| -%>
  <tr class="<%= cycle("odd", "even") %>">
    <td>
      <%= link_to game.id, [@championship, @group, @round, game] %>
    </td>
							<td>
			<%= game.home.name if game.home %>
		</td>
							<td>
      <%= game.visitant.name if game.visitant %>
    </td>
    <td class="last">
      <%= link_to "#{t("web-app-theme.show", :default => "Show")}", [@championship, @group, @round, game] %> |
      <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_championship_group_round_game_path(@championship, @group, @round, game) %> |
      <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", [@championship, @group, @round, game], :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
    </td>
  </tr>          
  <% end -%>
</table>
