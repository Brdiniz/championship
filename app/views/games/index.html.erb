<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
	    <li class="first"><%= link_to "Campeonatos", championships_path  %></li>
      <li><%= link_to @championship.name, @championship %></li>
      <li><%= link_to "Grupos", championship_groups_path %></li>
      <li><%= link_to @group.name, [@championship, @group] %></li>
			<li><%= link_to "Rodadas", championship_group_rounds_path %></li>
			<li><%= link_to @round.name, [@championship, @group, @round] %></li>
			<li class="active"><%= link_to "Jogos", "#" %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"></h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
					<th><%= t("activerecord.attributes.game.home_type", :default => "Home type") %></th>
					<th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @games.each do |game| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= link_to game.id, [@championship, @group, @round, game] %>
          </td>
										<td>
						<%= game.home.name if game.home %>
					</td>
										<td>
            <%= game.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", [@championship, @group, @round, game] %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_championship_group_round_game_path(@championship, @group, @round, game) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", [@championship, @group, @round, game], :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>